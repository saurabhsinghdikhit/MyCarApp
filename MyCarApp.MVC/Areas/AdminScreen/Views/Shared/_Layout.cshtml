<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="~/MyCarApp.png" type="image/imge_header">
    <title>@ViewBag.Title - Admin Panel</title>
    @Styles.Render("~/Content/AdminCss")
    @Scripts.Render("~/bundles/modernizr")
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    
</head>
<body>
    <div id="navig" class="navbar navbar-dark navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="/AdminScreen/Admin/Dashboard"><img src="~/MyCarAppBrand.png" width="100px" height="50px" /></a>

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li style="@ViewBag.Home">@Html.ActionLink("Home", "Dashboard", "Admin")</li>
                    <li style="@ViewBag.Vehicle">@Html.ActionLink("Vehicles", "AllCars", "Cars")</li>
                    <li style="@ViewBag.Feedback">@Html.ActionLink("Feedbacks", "ShowFeedbacks", "Admin")</li>
                    <li style="@ViewBag.Contact">@Html.ActionLink("Contact Us", "ShowContactUs", "Admin")</li>
                    <li>
                        <div class="dropdown">
                            <button class="dropbtn" style="background-color: white; padding-top: 14px; text-decoration: none !important; color: #000 !important; font-weight: 600 !important; letter-spacing: 0.5px !important; text-transform: uppercase !important; font-size: 15px !important; font-size: 16px; border: none; border-radius: 5px;">Refunds History</button>
                            <div class="dropdown-content">
                                <a href="/AdminScreen/admin/RentRefund">Rent Refund</a>
                                <a href="/AdminScreen/admin/PurchaseRefund">Purchase Refund</a>
                            </div>
                        </div>
                    </li>
                    <li style="@ViewBag.Purchase">@Html.ActionLink("Purchase History", "ShowPurchaseHistory", "Admin")</li>
                    <li style="@ViewBag.Rent">@Html.ActionLink("Rent History", "ShowRentHistory", "Admin")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">

                    <li><a href="/AdminScreen/Admin/Logout"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
                </ul>
            </div>

        </div>
    </div>
    
    <div class="container">
        <br /><br />
        @RenderBody()
        <br /><br />
        <div class="container-fluid">
            <!--===== FOOTER =====-->
            <footer class="footer">
                <p class="footer__title">My Car App </p>

                <p>&#169; 2020 copyright all right reserved</p>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
