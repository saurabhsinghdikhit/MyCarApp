@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<MyCarApp.BE.ViewModels.PdfVM>

@{
    ViewBag.Title = "All Purchase History";
    ViewBag.Purchase = "background:#2196f3;border-radius:50px";
}

<h2>Show Purchase History</h2>
<div class="table-responsive-sm">
    <table id="Purchase" class="table table-striped table-bordered" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th>Car Name</th>
                <th>Car Varient Name</th>
                <th>Price</th>
                <th>Customer</th>
                <th>Address</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CarName</td>
                    <td>@item.CarVarientName</td>
                    <td>&#8377; @item.Price</td>
                    <td>@item.UserName</td>
                    <td>@item.UserAddress</td>
                    <td>@item.Date</td>
                </tr>
            }
        </tbody>
    </table>
</div>


