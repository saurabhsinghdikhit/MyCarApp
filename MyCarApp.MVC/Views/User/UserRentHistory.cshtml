@model IEnumerable<MyCarApp.BE.ViewModels.RentPdfVM>
@{
    ViewBag.Title = "User Rent History";
}
<div class="breadcrumb-option">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__links">
                    <a href="/User/index"><i class="fa fa-home" style="padding-right: 5px;"></i>Home</a>
                    @*<a href="#">@Session["userName"].ToString().ToUpper()</a>*@
                    <span>Rent History</span>
                </div>
            </div>
        </div>
    </div>
</div>
@if (Model != null)
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3">
                <div class="card1 text-center">
                    <div class="card-block">
                        <img src="~/Uploads/CarsImages/@item.Image" class="img-thumbnail" style="height:250px" />
                        <div class="card-title">
                            <h4>@item.CarName - @item.CarVarientName</h4>
                            <h4><b>&#8377; @Math.Round(item.Price, 2)</b></h4>
                            @if (DateTime.Compare(DateTime.Now, item.StartDate) <= 0)
                            {
                                <span class="badge badge-pill badge-primary" style="background-color:#286fad !important">Not stated</span>
                            }
                            else if (DateTime.Compare(DateTime.Now, item.EndDate) > 0)
                            {
                                <span class="badge badge-pill badge-primary" style="background-color:#943634 !important">Completed</span>
                            }
                            else if (DateTime.Compare(DateTime.Now, item.EndDate) <= 0)
                            {
                                <span class="badge badge-pill badge-primary" style="background-color:green !important">Ongoing</span>
                            }

                        </div>
                        <div class="card-text">
                            @item.UserAddress
                            <p>@item.StartDate to @item.EndDate</p>
                        </div>
                        <a style="margin-top:10px; margin-bottom:10px;" href="/User/RentInvoice?carRentId=@item.CarRentId" class="btn btn-success">View Detail</a>
                        @if (item.status == "Approve")
                        {
                        <a style="margin-top:10px;  margin-bottom:10px;" href="#" class="btn btn-success">Refund Approved</a>
                        }
                        else if (item.status == "Pending")
                        {
                        <a style="margin-top:10px;  margin-bottom:10px;" href="#" class="btn btn-info">Refund Pending</a>
                        }
                        else if (item.status == "Reject")
                        {
                        <a style="margin-top:10px;  margin-bottom:10px;" href="#" class="btn btn-danger">Refund Rejected</a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <h2>No Data Found!!</h2>
}

