@model MyCarApp.BE.BussinessEntities.Car
@{
    ViewBag.Title = "Rent Car by City";
}
<div id="nofication" style="background: green;display:none; z-index: 10000; padding-top: 10px; padding-bottom: 10px;" class="notification">
    <p id="message" style="color:white;"></p>
</div>
<div class="breadcrumb-option">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__links">
                    <a href="/User/index"><i class="fa fa-home" style="padding-right: 5px;"></i>Home</a>
                    <a href="#">Rent Car</a>
                    <span>@Model.Name - @Model.CarVarients.Where(x => x.Id == ViewBag.VarientId).FirstOrDefault().Name</span>
                </div>
            </div>
        </div>
    </div>
</div>
<center>

    @if (Model != null)
    {
        <div class="row">
            <div class="col-md-4">
                <div class="chart-card">

                    <div class="user-details">
                        @foreach (var item in Model.CarVarients)
                        {
                            if (item.Id == @ViewBag.VarientId)
                            {
                                <div class="user-details">
                                    <strong> @Model.Name @item.Name</strong>
                                    <img src="~/Uploads/CarsImages/@item.Image" height="140" alt="" class="img-thumbnail" />
                                    <p>@Html.DisplayFor(model => model.LongDescription)</p>

                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="chart-card">
                    <div class="chart-text">
                        Payment Details
                    </div>
                    @foreach (var item in Model.CarVarients)
                    {
                        if (item.Id == @ViewBag.VarientId)
                        {
                            <div class="user-details">

                                <p><strong>Amount:  &#8377; <span id="pricePerDay">@Math.Round(item.Price, 2)</span> / day</strong></p>
                                <form name="frmMr" action="/User/RentCharge" method="POST" onsubmit="checkform();">
                                    <input type="hidden" name="varientId" value="@ViewBag.VarientId" />
                                    <input type="hidden" name="price" value="@ViewBag.Amount" />
                                    <div class="row">
                                        <div class="col-lg-6" style="width:100%">
                                            <p style="float:left; font-weight:bold">From Date:</p>
                                            <input onchange="calculateDate()" required id="startTime" type="date" class="form-control" name="startTime" />
                                        </div>

                                        <div class="col-lg-6" style="width:100%; margin:12px">
                                            <p style="float:left; font-weight:bold">To Date:</p>
                                            <input onchange="calculateDate()" required id="endTime" type="date" class="form-control" name="endTime" />
                                        </div>
                                        <div class="col-lg-6" style="width:100%; margin:12px">
                                            <p style="float:left; font-weight:bold">Pincode:</p>
                                            <input required id="pincode" onkeypress="return event.charCode === 0 || /\d/.test(String.fromCharCode(event.charCode));"  type="number" class="form-control" name="pincode" />
                                            <br /><button id="verifyPincode" class="btn btn-success">Check Pincode</button>
                                        </div>
                                        <div class="col-lg-6" id="localaddressdiv" style="width:100%; margin-left:40px;display:none">
                                            
                                            <input required id="localaddress" placeholder="your local address" type="text" class="form-control" name="localaddress" />
                                            
                                        </div>
                                    </div>
                                    <br />
                                    <strong>Actual Payable Amount:</strong><br /><b> &#8377; <span id="actualAmount">@Math.Round(item.Price, 2)</span></b>
                                    <article>
                                    </article>
                                    <script src="//checkout.stripe.com/v2/checkout.js"
                                            class="stripe-button"
                                            data-key="@ViewBag.StripePublishKey"
                                            data-locale="auto"
                                            data-currency=INR
                                            data-allow-remember-me="false"
                                            data-name="Rent @Model.Name @item.Name"
                                            data-image="../MyCarApp.png"
                                            data-email="@User.Identity.Name"
                                            data-description="@Model.ShortDescription">
                                    </script>
                                </form>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>

    }
</center>
<style>
    button.stripe-button-el,
    button.stripe-button-el > span {
        background-color: #5cb85c !important;
        background-image: none;
        height: 30px;
        width: 100px;
        color: white;
        box-shadow: 10px;
        display:none
    }
</style>
<script>
    var ele = document.getElementsByClassName("stripe-button-el")[0];
    ele.innerHTML = "Rent this car";
</script>
@section scripts{
    <script>
        function checkform() {
            if (document.frmMr.pincode.value == "") {
                alert("please enter pincode");
                return false;
            }
            else if (document.frmMr.localaddress.value == "") {
                alert("please enter local address");
                return false;
            }
            else {
                document.frmMr.submit();
            }
        }
        function call() {
            document.getElementById('nofication').style.display = 'block';
            setTimeout(function () {
                $('#nofication').fadeOut('fast');
            }, 4000);
        }
        $(document).ready(function () {
            $("#verifyPincode").click(function (e) {
                e.preventDefault();
                if ($("#pincode").val() == "") {
                    alert("please enter pincode first");
                } else {
                    $.ajax(
                        {
                            type: "POST",
                            async: true,
                            url: "/User/VerifyPincode",
                            data: {
                                Pincode: $("#pincode").val()
                            },
                            success: function (data) {
                                if (data == "Avalable") {
                                    $("#message").last().html('Car is available for your location');
                                    $("#localaddressdiv").show();
                                    var ele = document.getElementsByClassName("stripe-button-el")[0];
                                    ele.style.display = "block";
                                    call();
                                }
                                else {
                                    $("#message").last().html("Sorry this car is not available for your location");
                                    $("#localaddressdiv").hide();
                                    var ele = document.getElementsByClassName("stripe-button-el")[0];
                                    ele.style.display = "none";
                                    call();
                                }
                            }
                        });
                }
            });
        });

    </script>

    <script>
        var dtToday = new Date();

        var month = dtToday.getMonth() + 1;
        var day = dtToday.getDate();
        var endDay = dtToday.getDate() + 1;
        var year = dtToday.getFullYear();
        if (month < 10)
            month = '0' + month.toString();
        if (day < 10)
            day = '0' + day.toString();
        var maxDate = year + '-' + month + '-' + day;
        $('#startTime').attr('min', maxDate);
        $('#startTime').attr('value', maxDate);
    </script>
    <script>
        var dtToday = new Date();
        var oneday = 60 * 60 * 24 * 1000;
        dtToday = new Date(dtToday.getTime() + oneday);
        var month = dtToday.getMonth() + 1;
        var day = dtToday.getDate();
        var endDay = dtToday.getDate() + 1;
        var year = dtToday.getFullYear();
        if (month < 10)
            month = '0' + month.toString();
        if (day < 10)
            day = '0' + day.toString();
        var maxDate = year + '-' + month + '-' + day;
        $('#endTime').attr('min', maxDate);
        $('#endTime').attr('value', maxDate);
    </script>
    <script src="~/Scripts/RentCarByCity.js"></script>
}
