@model MyCarApp.BE.ViewModels.UserRegistrationVM

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/AuthPageStyle.css" rel="stylesheet" />
    <title>Register :: My Car App</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="icon" href="~/MyCarApp.png" type="image/imge_header">
</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @using (Html.BeginForm("Register","User", FormMethod.Post, new { @enctype = "multipart/form-data", id = "form" }))
    {
    <div class="main">


        <!-- Sign up form -->
        <section class="signup">
            <div class="container">
                <div class="signup-content">
                    <div class="signup-form">
                        <h2 class="form-title">Sign up</h2>
                        <form method="POST" class="register-form" id="register-form">
                            <div class="form-group">
                                <div class="col-lg-6">
                                    <label><i class="fa fa-user material-icons-name"></i></label>
                                    @Html.TextBoxFor(a => a.Name, new { @Placeholder = "Name" })
                                    @Html.ValidationMessageFor(a => a.Name, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-lg-6">
                                    <label><i class="fa fa-envelope material-icons-name"></i></label>
                                    @Html.TextBoxFor(a => a.Email, new { @Placeholder = "Email" })
                                    @Html.ValidationMessageFor(a => a.Email, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-6">
                                    <label><i class="fa fa-unlock-alt material-icons-name"></i></label>
                                    @Html.TextBoxFor(a => a.Password, new { @Placeholder = "Password", type = "password" })
                                    @Html.ValidationMessageFor(a => a.Password, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-lg-6">
                                    <label><i class="fa fa-unlock-alt material-icons-name"></i></label>
                                    @Html.TextBoxFor(a => a.ConfirmPassword, new { @Placeholder = "Confirm Password", type = "password" })
                                    @Html.ValidationMessageFor(a => a.ConfirmPassword, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-6">
                                    <label><i class="fa fa-globe material-icons-name"></i></label>
                                    @Html.TextBoxFor(a => a.ContactNo, new { @Placeholder = "Contact number" })
                                    @Html.ValidationMessageFor(a => a.ContactNo, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-lg-6">
                                    <label><i class="fa fa-globe material-icons-name"></i></label>
                                    @Html.EditorFor(a => a.Image, new { htmlAttributes = new { type = "file", accept = ".png, .jpg, .jpeg" } })
                                    @Html.ValidationMessageFor(a => a.Image, "", new { @class = "text-danger" })
                                </div>
                            </div>
                          
                          
                            <div class="form-group form-button text-center">
                                <input type="submit" name="signup" id="signup" class="form-submit" value="Register" />
                                <br />@Html.ActionLink("Already have an account?", "LoginPage", "User")
                                <div style="color:red;">@ViewBag.EmailError</div>
                            </div>

                        </form>
                    </div>

                </div>
            </div>
        </section>


    </div>

    }

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>

